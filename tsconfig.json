{
    "compilerOptions": {
        "target": "ES2024",
        "allowJs": true,
        "checkJs": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [ "ES2024" ],
        "baseUrl": "./src/",
        "paths": { "*": [ "*" ] },
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
